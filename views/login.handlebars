
<div class="container-flex" id="login-container">
    <div class="row d-flex login-nav mx-auto">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <ul class="nav nav-tabs">
                <li role="presentation" class="nav-item active" id="login-button">
                    <a class="nav-link" href="#">Login</a>
                </li>
                    <li role="presentation" class="nav-item" id="signup-button">
                <a class="nav-link" href="#">Sign up</a>
                </li>
            </ul>
                <div id="login-logo-div" class="d-flex align-self-center">
            <img id="login-logo" class="mx-auto m-2" src="/img/friendcorral.png" alt="Friend Corral Logo">
         </div>
         <div class="collapse" id="login-form">
        <form>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" class="form-control" name = "email" placeholder="Enter your email...">
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" name = "password" placeholder="Enter your password...">
            </div>

            <button class="btn btn-primary btn-block">Login</button>
        </form>
        </div>
        <div class="collapse" id="signup-form">
        <form>
            <div class='form-group'>
                <label>First Name:</label>
                <input type='text' placeholder='John' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Last Name:</label>
                <input type='text' placeholder='Doe' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Email</label>
                <input type='text' placeholder='Enter your Email' class='form-control'/>
            </div>

            <div class='form-group'>
                <label>Password</label>
                <input type = 'password' placeholder = 'Password: (must be at least 6 characters)' class='form-control'/>
            </div>

            <button class='btn btn-primary btn-block'>Signup</button>
            <button class='btn btn-primary btn-block'>Facebook</button>
        </form>
    </div>
    <div class="col-md-2"></div>     
</div>



